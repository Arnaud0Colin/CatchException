@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div >
        @Html.DisplayFor(model => model)
    </div>


    if (Model.GetNextStatus != null && Model.GetNextStatus.Any())
    {

    <div class="form-group">
        @Html.LabelFor(model => model.CodeStatus, new { @class = "control-label col-md-offset-4 col-md-1" })
        <div class="col-md-4  FormLabel">
            @Html.DropDownListFor(model => model.CodeStatus, Model.ChargeStatus, "-- Choisir un Statut --", new { @id = "CodeStatus" })
            @Html.ValidationMessageFor(model => model.CodeStatus)
        </div>
    </div>

