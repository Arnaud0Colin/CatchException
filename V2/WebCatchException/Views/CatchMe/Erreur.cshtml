            <div class="col-md-4">
                <input type="submit" value="Valider" class="btn btn-warning" />
            </div>
        </div>
     </div>
    }

}

          

@if (ViewBag.Previous != null && ViewBag.Previous != 0)
{
<a class="carousel-control left w7" href="@Url.Action(ViewContext.RouteData.Values["action"].ToString(), "CatchMe", new { id = ViewBag.Previous })" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
</a>
}

@if (ViewBag.Next != null && ViewBag.Next != 0)
{

<a class="carousel-control right w7" href="@Url.Action(ViewContext.RouteData.Values["action"].ToString(), "CatchMe", new { id = ViewBag.Next })" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
</a>
}


@section Scripts {
    <script lang="fr-fr">

    $("#pop").on("click", function () {
        $('#imagepreview').attr('src', $('#imageresource').attr('src')); // here asign the image to the modal when the user click the enlarge link
        $('#imagemodal').modal('show'); // imagemodal is the id attribute assigned to the bootstrap modal, then i use the show function
    });


    </script>
}
  
